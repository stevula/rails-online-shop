<% @products.each do |product| %>
  <%= link_to(product_path(product), class: "hover-area col-md-2 col-sm-2 col-xs-6") do %>
    <%# link_to image_tag("https://avatars1.githubusercontent.com/u/10661978?v=3&s=200", class: "hover-img img-responsive col-md-2 col-sm-2 col-xs-6"), product_path(product) %>

      <div class="hover-txt" id="<%= dom_id(product)%>">
          <span>
            <%= product.name %>
          </span>
          <div>
            $<%= product.price %>
          </div>
      </div>
  <% end %>

<% end  %>

<% if user_signed_in? %>
  <div class="row">
    <div class="btn btn-success col-md-4 col-md-offset-4" id="create-btn" >
      <%= link_to("Create New Product", new_product_path) %>
    </div>
  </div>
<% end %>

<%= form_for @product do |f| %>
	<div>
		<%= f.label :name, "Name:" %>
		<%= f.text_field :name %>
	</div>
	<div>
		<%= f.label :description, "Description:" %>
		<%= f.text_area :description %>
	</div>
	<div>
		<%= f.label :quantity, "Quantity:"%>
		<%= f.text_field :quantity %>
	<div>
	<div>
		<%= f.label :price , "Price: $"%>
		<%= f.text_field :price  %>
	</div>
	<div><%= f.submit %></div>

<% end %>

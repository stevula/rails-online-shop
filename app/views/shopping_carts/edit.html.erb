<div class="row">
	<div class="col-md-2"> Name:</div>
	<div class="col-md-1"> Price:</div>

</div>
<% @products.each do |product|%>
<div class="row">
	<div class="col-md-2"><%= product.name %></div>
	<div class="col-md-1"> <%= product.price %></div>
	<%=bootstrap_form_for @shopping_cart, url: user_shopping_cart_path(current_user.id, current_user.shopping_cart.id), method: :put  do |f|  %>
	<%= f.hidden_field :product_id, value: product.id %>
	<%=  f.hidden_field :remove, value: true  %>
	<%= f.submit "Remove", class: "btn btn-danger col-md-1" %>
	<% end %>
</div>

<% end %>
<%=link_to "clear cart", user_shopping_cart_path(current_user.id,current_user.shopping_cart.id), method: :delete, class: "btn btn-danger col-md-1"  %>